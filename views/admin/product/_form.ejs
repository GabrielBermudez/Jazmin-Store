<div class="mb-3">
  <label for="label-nombre" class="form-label">Nombre:</label>
  <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Camiseta" value="<%=product?product.nombre:''%>">
  <label for="" id="labelNombre"></label>
</div>
<div class="mb-3">
  <label for="label-descripcion" class="form-label">Descripción:</label>
  <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Verano Mangas Cortas" value="<%=product?product.descripcion:''%>">
  <label for="" id="labelDescripcion"></label>
</div>
<div class="mb-3">
  <label for="label-precio" class="form-label">Precio: $</label>
  <input type="number" class="form-control" id="precio" name="precio" placeholder="559.99" step="0.00001" value="<%=product?product.precio:''%>">
  <label for="" id="labelPrecio"></label>
</div>
<div class="mb-3">
  <label for="label-stock" class="form-label">Stock:</label>
  <input type="number" class="form-control" id="stock" name="stock" placeholder="35" value="<%=product?product.stock:''%>">
  <label for="" id="labelStock"></label>
</div>
<div class="mb-3">
	<label for="label-categoria" class="form-label">Categoría:</label>
	<select name="categoria" id="categoria" class="form-control">
		<option value="Ropa">Ropa</option>
		<option value="Lenceria">Lenceria</option>
		<option value="Artesania">Artesania</option>
	</select>
	<label for="" id="labelCategoria"></label>
</div>

<div class="mb-3">
  <label for="label-disponibilidad" class="form-label">Disponibilidad:</label><br>
    <%if(product){%>
      <%if(product.disponibilidad){%>
        <input type="radio" id="disponibilidad" name="disponibilidad" value="1" checked> Si <br>
        <input type="radio" id="disponibilidad" name="disponibilidad" value="0" > No <br>
      <%}else{%>
        <input type="radio" id="disponibilidad" name="disponibilidad" value="1"> Si <br>
        <input type="radio" id="disponibilidad" name="disponibilidad" value="0" checked> No <br>
      <%}%>
    <%}else{%>
      <input type="radio" id="disponibilidad" name="disponibilidad" value="1"> Si <br>
      <input type="radio" id="disponibilidad" name="disponibilidad" value="0"> No <br>
    <%}%>
  <label for="" id="labelDisponibilidad"></label>
</div>

<div class="mb-3">
  <label for="label-image" class="form-label">Imagen:</label><br>
    <input type="file" id="image" name="image" accept="image/*">
  <label for="" id="labelImage"></label>
</div>

<div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-primary mb-3" id="btnEnviar">Enviar</button>
</div>